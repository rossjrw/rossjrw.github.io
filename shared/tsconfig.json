{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "rootDir": "./src/",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [ "es2020" ],
    "declaration": true,
    "composite": true
  },
  "include": [ "src/**/*.ts" ],
  "types": [ "node" ]
}

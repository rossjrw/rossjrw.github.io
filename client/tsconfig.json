{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "strict": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [ "es2020", "dom" ],
    "paths": { "@/*": [ "src/*" ] }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "src/shims-vue.d.ts",
    "src/shims-raw-loader.d.ts"
  ]
}
